# Firebase Configuration (Client-side - use VITE_ prefix)
# These are used in the browser/client code
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK (Server-side only - NO VITE_ prefix)
# This should be the entire JSON content of your service account key file
# Paste the entire JSON object as a single line (or use Vercel's environment variable editor)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Stripe Configuration (Server-side only)
STRIPE_SECRET_KEY=sk_live_...or_sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_BASIC=price_... (Basic plan price ID)
STRIPE_PRICE_PRO=price_... (Pro plan price ID)

# AI Agent Configuration (Server-side only)
AI_AGENT_API_KEY=your-ai-agent-api-key

# Site URL (Server-side only)
# Used for Stripe redirect URLs
SITE_URL=https://your-domain.vercel.app

# Optional: Feature Flags
VITE_ENABLE_FEATURE_FLAGS=true
